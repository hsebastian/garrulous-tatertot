<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/movie_title_text_view"
        android:text="My Movie Title"
        android:textSize="@dimen/abc_text_size_headline_material"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/movie_poster_image_view"
            android:layout_width="200dp"
            android:layout_height="300dp"
            android:background="@color/ripple_material_dark"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/release_date_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Release date"
                android:textSize="@dimen/abc_text_size_medium_material"/>
            <TextView
                android:id="@+id/vote_average_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Vote average"
                android:textSize="@dimen/abc_text_size_medium_material"/>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mark as favorite"/>
        </LinearLayout>
    </LinearLayout>

    <!--Synopsis-->

    <TextView
        android:id="@+id/plot_synopsis_text_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="Plot synopsis"/>

    <!--Trailers-->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:id="@+id/trailers_title_text_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Trailers"/>
        <ListView
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <!--Reviews-->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:id="@+id/reviews_title_text_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Reviews"/>
        <ListView
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </LinearLayout>


</LinearLayout>
